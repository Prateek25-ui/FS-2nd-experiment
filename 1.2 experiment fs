  color: #2ecc71;
  margin-bottom: 20px;
}

/* Button base styling */
.btn {
  width: 100%;
  padding: 12px;
  margin: 8px 0;
  border: none;
  border-radius: 6px;
  color: white;
  font-size: 16px;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

/* Deposit button */
.deposit {
